{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
    {{members.image}}
      <h3>{{members.name}}</h3>
      <h4>{{members.instruments}}</h4>
      <h4>{{members.tenure}}</h4>
      <h4>{{members.birthplace}}</h4>
      <h4>{{members.birthdate}}</h4>
    </div>
    <div class="col-sm-8">
      <p>{{members.text | safe}}</p>
    </div>
  </div>
</article>
{% endblock %}
